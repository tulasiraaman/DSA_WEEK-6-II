class LRUCache {
    private static int capacity;
    private static LinkedHashMap<Integer, Integer> map;

    LRUCache(int cap) {
        this.capacity = cap;
        // accessOrder = true â†’ maintains order of access (LRU)
        this.map = new LinkedHashMap<>(cap, 0.75f, true);
    }

    public static int get(int key) {
        if (!map.containsKey(key)) {
            return -1;
        }
        return map.get(key);
    }

    public static void put(int key, int value) {
        if (map.containsKey(key)) {
            map.put(key, value);
            return;
        }
        if (map.size() == capacity) {
            int lruKey = map.keySet().iterator().next();
            map.remove(lruKey);
        }//removes least accessed data
        map.put(key, value);
    }

}
