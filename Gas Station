class Solution {
    public int startStation(int[] gas, int[] cost) {
        // code here
        int totalGas = 0, totalCost = 0;
        int tank = 0, start = 0;
        int n = gas.length;

        for (int i = 0; i < n; i++) {
            totalGas += gas[i];
            totalCost += cost[i];
            tank += gas[i] - cost[i];

            // If tank goes negative, reset start
            if (tank < 0) {
                start = i + 1;
                tank = 0;
            }
        }

        // If overall gas is less than cost, impossible
        return (totalGas < totalCost) ? -1 : start;
    }
}
